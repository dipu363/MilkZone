<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_button_dialog_focused_holo_dark"
    android:orientation="vertical"
    tools:context=".CowDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cow_titleid"
            style="@style/edit_text_style_1"
            android:layout_below="@+id/edit_name"
            android:layout_gravity="left"
            android:layout_marginTop="100dp"
            android:hint="Cow Title"
            android:inputType="text" />


        <EditText
            android:id="@+id/WightEditid"
            style="@style/edit_text_style_1"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_email"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:hint="Cow Weight"
            android:inputType="text" />

        <EditText
            android:id="@+id/cow_avgproductionid"
            style="@style/edit_text_style_1"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_email"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:hint="Average Milk production"
            android:inputType="text" />

        <EditText
            android:id="@+id/cow_remarksid"
            style="@style/edit_text_style_1"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_email"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:hint="Remarks"
            android:inputType="text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCowAddid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/btnCowCancelid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCowdetailsshowid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Show Cow details list"
            android:textAllCaps="false"
            android:textColor="@color/color_white" />
    </LinearLayout>

</LinearLayout>